<body>

    <header>
        <h1>ğŸŠ è¥ä¸šè®°å½•</h1>
        <p>Anton Â· Sungchan Â· Eunseok</p>
    </header>

    <div class="calendar-box">
        <div class="cal-header">
            <span id="calendarMonthYear">Month Year</span>
            <div>
                <button class="btn" onclick="changeMonth(-1)" style="box-shadow:none; background:#f5f5f5; color:#555;">&lt;</button>
                <button class="btn" onclick="changeMonth(1)" style="box-shadow:none; background:#f5f5f5; color:#555;">&gt;</button>
            </div>
        </div>
        <div class="cal-grid" id="calendarGrid"></div>
    </div>

    <span id="displayDate"></span>

    <div id="app"></div>

    <div class="summary-box">
        <b style="color:var(--primary)">ğŸ“ å½“æ—¥å°ç»“ï¼š</b>
        <div id="summaryContent" style="margin-top:5px;"></div>
    </div>

    <input type="date" id="currentDate" style="display:none">

    <script>
        // === ğŸŠ æˆå‘˜é…ç½® (å‰©ä¸‹ä¸‰äºº) ===
        const members = [
            { name: "Anton", emoji: "ğŸ¦•" },
            { name: "Sungchan", emoji: "ğŸŠ" }, 
            { name: "Eunseok", emoji: "ğŸª¨" }
        ];

        const categories = ["IG Post", "IG Story", "Weverse", "TikTok", "Live"];
        
        // === æ ¸å¿ƒé€»è¾‘ ===
        const app = document.getElementById('app');
        const dateInput = document.getElementById('currentDate');
        const displayDate = document.getElementById('displayDate');
        const summaryContent = document.getElementById('summaryContent');
        
        let today = new Date();
        // ä¿®æ­£æ—¶åŒº
        const offset = today.getTimezoneOffset() * 60000;
        const localISOTime = (new Date(today - offset)).toISOString().slice(0, 10);
        dateInput.value = localISOTime;
        
        let calendarViewDate = new Date(); 

        // 1. æ¸²æŸ“ç•Œé¢
        function render() {
            app.innerHTML = '';
            const dateKey = dateInput.value;
            displayDate.textContent = "ğŸ“… å½“å‰æŸ¥çœ‹: " + dateKey;

            members.forEach(member => {
                const card = document.createElement('div');
                card.className = 'member-card';

                // è®¡ç®—ä»Šæ—¥æ€»æ•°
                let totalToday = 0;
                categories.forEach(cat => totalToday += getData(dateKey, member.name, cat));

                let html = `
                    <div class="member-header">
                        <div class="avatar">${member.emoji}</div>
                        <span style="font-weight:bold; font-size:18px;">${member.name}</span>
                        ${totalToday > 0 ? `<span style="margin-left:auto; background:var(--primary); color:white; padding:2px 8px; border-radius:10px; font-size:12px;">ğŸ”¥ ${totalToday}</span>` : ''}
                    </div>
                `;

                categories.forEach(cat => {
                    const count = getData(dateKey, member.name, cat);
                    html += `
                        <div class="row">
                            <span class="cat-name">${cat}</span>
                            <div class="ctrls">
                                <button class="btn" onclick="updateCount('${member.name}', '${cat}', -1)">-</button>
                                <input type="number" class="num" value="${count}" onchange="manualInput('${member.name}', '${cat}', this.value)">
                                <button class="btn" onclick="updateCount('${member.name}', '${cat}', 1)">+</button>
                            </div>
                        </div>
                    `;
                });

                const note = getNote(dateKey, member.name);
                html += `<input type="text" class="note-input" placeholder="âœ¨ å¤‡æ³¨: å‘äº†ä»€ä¹ˆ..." value="${note}" oninput="saveNote('${member.name}', this.value)">`;

                card.innerHTML = html;
                app.appendChild(card);
            });

            renderSummary(dateKey);
            renderCalendar();
        }

        // 2. æ¸²æŸ“æ‘˜è¦
        function renderSummary(dateKey) {
            let summaryHTML = '';
            let hasActivity = false;

            members.forEach(member => {
                let acts = [];
                categories.forEach(cat => {
                    const c = getData(dateKey, member.name, cat);
                    if (c > 0) acts.push(`${cat} x${c}`);
                });
                const note = getNote(dateKey, member.name);
                if (note) acts.push(`"${note}"`);

                if (acts.length > 0) {
                    hasActivity = true;
                    summaryHTML += `<div style="margin-bottom:4px;">${member.emoji} <b>${member.name}</b>: ${acts.join(', ')}</div>`;
                }
            });

            summaryContent.innerHTML = hasActivity ? summaryHTML : '<span style="color:#aaa;">ğŸ˜´ è¿™ä¸€å¤©å¤§å®¶éƒ½åœ¨ä¼‘æ¯...</span>';
        }

        // 3. æ¸²æŸ“æ—¥å†
        function renderCalendar() {
            const grid = document.getElementById('calendarGrid');
            grid.innerHTML = ''; 
            
            const year = calendarViewDate.getFullYear();
            const month = calendarViewDate.getMonth();
            document.getElementById('calendarMonthYear').textContent = `${year}å¹´ ${month + 1}æœˆ`;

            const daysInMonth = new Date(year, month + 1, 0).getDate();
            const firstDay = new Date(year, month, 1).getDay();
            const weekDays = ['æ—¥', 'ä¸€', 'äºŒ', 'ä¸‰', 'å››', 'äº”', 'å…­'];
            
            weekDays.forEach(d => {
                const l = document.createElement('div');
                l.className = 'cal-day-label'; l.textContent = d;
                grid.appendChild(l);
            });

            for (let i = 0; i < firstDay; i++) grid.appendChild(document.createElement('div'));

            for (let i = 1; i <= daysInMonth; i++) {
                const el = document.createElement('div');
                const currentMonth = String(month + 1).padStart(2, '0');
                const currentDay = String(i).padStart(2, '0');
                const dateStr = `${year}-${currentMonth}-${currentDay}`;
                
                el.textContent = i;
                
                // è®¡ç®—ä¸‰äººæ€»çƒ­åŠ›
                let total = 0;
                members.forEach(m => categories.forEach(c => total += getData(dateStr, m.name, c)));
                
                el.className = 'cal-day';
                if (total > 0) el.classList.add('lv-1');
                if (total >= 5) el.classList.add('lv-2');
                if (total >= 12) el.classList.add('lv-3'); 
                
                if (dateStr === dateInput.value) el.classList.add('selected');

                el.onclick = () => { dateInput.value = dateStr; render(); };
                grid.appendChild(el);
            }
        }

        function changeMonth(offset) {
            calendarViewDate.setMonth(calendarViewDate.getMonth() + offset);
            renderCalendar();
        }

        // 4. æ•°æ®å­˜å– (LocalStorage - å•æœºç‰ˆ)
        function getData(date, name, cat) { return parseInt(localStorage.getItem(`${date}_${name}_${cat}`)) || 0; }
        function getNote(date, name) { return localStorage.getItem(`${date}_${name}_note`) || ""; }
        
        function updateCount(name, cat, delta) {
            const date = dateInput.value;
            let val = getData(date, name, cat) + delta;
            if (val < 0) val = 0;
            localStorage.setItem(`${date}_${name}_${cat}`, val);
            render();
        }
        function manualInput(name, cat, val) {
            const date = dateInput.value;
            let v = parseInt(val);
            if (isNaN(v) || v < 0) v = 0;
            localStorage.setItem(`${date}_${name}_${cat}`, v);
            render();
        }
        function saveNote(name, val) {
            localStorage.setItem(`${dateInput.value}_${name}_note`, val);
            renderSummary(dateInput.value);
        }

        render();
    </script>
</body>
