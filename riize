        }
        
        /* é€‰ä¸­æ—¥æœŸçš„ç‰¹æ•ˆ */
        .cal-day.selected { 
            border: 2px solid var(--primary); 
            color: var(--primary); font-weight: bold; transform: scale(1.1); 
        }

        /* ğŸ”¥ æ©™è‰²çƒ­åŠ›å›¾ç­‰çº§ */
        .lv-1 { background: #ffeaa7; border-color: #ffeaa7; color: #d35400; } /* å¥¶é»„ */
