        }
        .cal-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 15px; font-weight: bold; font-size: 18px; }
        .cal-grid { display: grid; grid-template-columns: repeat(7, 1fr); gap: 6px; text-align: center; }
        .cal-day-label { font-size: 12px; color: var(--gray); margin-bottom: 5px; }
        
        .cal-day {
            aspect-ratio: 1; display: flex; align-items: center; justify-content: center;
