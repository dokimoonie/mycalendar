        /* æ—¥å†åŒºåŸŸ */
        .calendar-box {
            background: var(--card); border-radius: 16px; padding: 15px;
            box-shadow: 0 8px 24px rgba(255, 90, 0, 0.08); /* æ©™è‰²é˜´å½± */
